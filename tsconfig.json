{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "react",
        "baseUrl": "./src",
        "sourceMap": false,
        "declarationMap": false,
        

        "declaration": true,
        "outDir": "./dist",
        "module": "ESNext",
        "resolveJsonModule": true,
        "skipLibCheck": true,


        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ]
    },
    "rootDir": "./src",
    "incremental": true,
    "experimentalDecorators": true,
    "lib": [
        "dom",
        "es2015"
    ],

}